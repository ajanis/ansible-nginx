# {{ ansible_managed }}

upstream foreman {
    server localhost:3000;
}

server {
    listen       80 default_server;
    server_name  {{ nginx_server_name }};

    access_log  /var/log/nginx/foreman.access.log  main;
    error_log   /var/log/nginx/foreman.error.log;

    error_page  404              /404.html;
    location = /404.html {
        root   /usr/share/nginx/html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    location / {
        proxy_pass http://foreman;
    }
}


upstream foreman {
    server localhost:3000;
}

server {
    listen 80;
    server_name plpp.domain.com;
    return 301 https://$server_name$request_uri;
}
server {  
    listen 443 ssl http2;
    server_name plpp.domain.com;

#SSL settings
    include /config/nginx/ssl.conf

location / {
    proxy_pass http://192.168.1.2:8701;
    include /config/nginx/proxy.conf;
    proxy_set_header Accept-Encoding "";
    sub_filter
    '</head>'
    '<link rel="stylesheet" type="text/css" href="https://gilbn.github.io/theme.park/CSS/themes/plpporg.css">
    </head>';
    sub_filter_once on;
  }
}